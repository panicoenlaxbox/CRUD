@using FluentMvcGrid
@model WebApplication1.Features.Customers.ViewModels.IndexViewModel
<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
@(Html.FluentMvcGrid(Model.Result.Result)
      .AddAttribute("id", o => "table1")
      .Class("table table-striped table-hover table-bordered")
      .AddColumn("Id", column => column.Id, "Id")
      .AddColumn("Name", column => column.Name, "Name")
      .Pagination(Model.Result.Page, Model.Result.PageSize, Model.Result.TotalSize))
@section scripts {
    <script>
        $(function () {
            $("tbody tr", "#table1").on("click", function (e) {
                var url = "@Url.Action("Edit")" + "/" + $(this).find("[data-column-name='Id']").text();
                document.location.href = url;
            });
        });
    </script>
}